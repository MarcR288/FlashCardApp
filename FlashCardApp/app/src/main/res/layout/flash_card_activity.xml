<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/flash_card_activity_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:text="Flash Card Activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question_text"
        android:layout_width="342dp"
        android:layout_height="98dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:text="Question will go here"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flash_card_activity_header" />

    <TextView
        android:id="@+id/answer_text"
        android:layout_width="342dp"
        android:layout_height="401dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Answer will go here"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_text" />

    <Button
        android:id="@+id/b_next_card"
        android:layout_width="149dp"
        android:layout_height="92dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="Next Card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/b_flip"
        android:layout_width="149dp"
        android:layout_height="92dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:text="Flip Card"
        app:layout_constraintBottom_toTopOf="@+id/b_next_card"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/b_mastered"
        android:layout_width="149dp"
        android:layout_height="92dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:text="Mastered!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b_edit_card"
        android:layout_width="149dp"
        android:layout_height="92dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:text="Edit Card"
        app:layout_constraintBottom_toTopOf="@+id/b_mastered"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>