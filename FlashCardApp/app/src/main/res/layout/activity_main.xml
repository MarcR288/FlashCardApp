<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/menu_screen_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Flash Card App"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/b_start_flashCard_activity"
        android:layout_width="197dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="My Flash Cards"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_screen_header"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/b_start_progress_activity"
        android:layout_width="197dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="Track My Progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_start_flashCard_activity" />

    <Button
        android:id="@+id/b_start_new_card_activity"
        android:layout_width="197dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="Add New Card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_start_progress_activity" />

    <Button
        android:id="@+id/b_clear_cards"
        android:layout_width="197dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="Clear All Cards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_start_new_card_activity" />

</androidx.constraintlayout.widget.ConstraintLayout>